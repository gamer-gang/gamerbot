{
  "exclude": ["node_modules", "**/node_modules/*", "types/gamerbot.d.ts"],
  "include": ["lib", "scripts", "types", "test", "scripts", "lib/index.ts"],
  "compilerOptions": {
    "lib": ["esnext"],
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "jsx": "react-jsx",

    "checkJs": true,
    "incremental": true,

    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "useUnknownInCatchVariables": false,
    "skipLibCheck": true,

    "sourceMap": true,
    "declaration": true,
    "baseUrl": "gamerbot",
    "emitDeclarationOnly": true,
    "experimentalDecorators": true,
    "outFile": "types/gamerbot.d.ts"
  }
}
